#!/usr/bin/env node

/**
 * Module dependencies.
 */

var bodyParser = require('koa-bodyparser');
var PORT = process.env.PORT || 3000;
var logger = require('koa-logger');
var route = require('koa-route');
var cors = require('koa-cors');
var koa = require('koa');

/**
 * Expose `app`.
 */

module.exports = app = koa();

/**
 * Middleware.
 */

app.use(logger());
app.use(bodyParser());
app.use(cors());

/**
 * Configure routes.
 */

var routes = require('../server/routes.js');
app.use(route.get('/', routes.index));
app.use(route.get('/provider/:id/', routes.getProvider));
app.use(route.get('/provider/:id/consumers', routes.getConsumers));
app.use(route.get('/consumer/:id', routes.getConsumer));
app.use(route.post('/consumer/:id', routes.setConsumer));

/**
 * Listen on PORT.
 */

app.listen(PORT);
console.log('listening on port ' + PORT);
